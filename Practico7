import numpy as np
import cv2
import math

img = cv2.imread('30stm.jpg')
height = img.shape[0]
width = img.shape[1]

def deformarimagen(img, tx, ty, angulo, escala):
	angulo = np.deg2rad(angulo)  # angulo en radianes
	matriz = np.float32([[escala*math.cos(angulo), escala*math.sin(angulo),tx],[-escala*math.sin(angulo), escala*math.cos(angulo), ty]])
	deformacion = cv2.warpAffine(img, matriz, (width, height))
	return deformacion

while True:
	resultadofinal = deformarimagen(img, 700, 700, 290, -0.5)
	cv2.imshow('TrabajoPractico6/RevillaMarco', resultadofinal)
	cv2.waitKey(0)
	cv2.destroyAllWindows()
	break
