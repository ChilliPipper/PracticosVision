import random

print("A ver si andás bien para la quiniela.")
numeroaleatorio = random.randint(1, 10)
intentos = 0

print("Adivina el número entre 1 y 100 para ganarte un alcohol en gel:")

while intentos < 10:
	palpito = int(input())
	if palpito == numeroaleatorio:
		print("Andás con suerte!! . Te fueron ", intentos+1, " intentos para adivinarlo")
		break
	else:
		print("No era ese... Te quedan", 9-intentos, "intentos")
	intentos += 1
  
if not intentos < 10:
	print("Sorry, perdiste y encima te contagiaste! El número era", numeroaleatorio)
